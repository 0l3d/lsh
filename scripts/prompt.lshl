local result = execvr("git --version")
local gitversion = result:match("git version ([%d%.]+)")

function update()
  if gitversion then 
    prompt = string.format("%s -  %s \n$ ", cwd, gitversion)
  else 
    prompt = string.format("%s -  %s \n$ ", cwd, gitversion)
  end 
  set_prompt(prompt)
end

function on_cd(path)
  print("new path: ", path);
end

